{
    "name": "agenciadreamup/alanps",
    "description": "PortfÃ³lio Alan Pardini Sant Ana",
    "authors": [
        {
            "name": "Alan PS",
            "email": "alanps2012@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Agenciadreamup\\Alanps\\": "src/"
        }
    },
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=8.2",
        "roots/wordpress": "*",
        "wpackagist-plugin/advanced-custom-fields": "*",
        "wpackagist-plugin/advanced-google-recaptcha": "*",
        "wpackagist-plugin/all-in-one-wp-migration":"*",	
        "wpackagist-plugin/better-search-replace":"*",
        "wpackagist-plugin/ewww-image-optimizer":"*",
        "wpackagist-plugin/html-forms": "*",
        "wpackagist-plugin/megamenu": "*",
        "wpackagist-plugin/really-simple-ssl": "*",
        "wpackagist-plugin/seo-by-rank-math":"*",
        "wpackagist-plugin/simple-history": "*",
        "wpackagist-plugin/wp-debugging": "*",
        "wpackagist-plugin/wp-mail-smtp": "*",
        "wpackagist-plugin/wordfence": "*"
    },
    "scripts": {
        "theme-install": [
            "cd wp-content/themes/agenciadreamup && composer install && yarn install && yarn build"
        ],
        "move-wordpress": [
            "rm -rf wordpress/wp-content/plugins/*",
            "rm -rf wordpress/wp-content/themes/*",
            "cp -rf wordpress/* .",
            "rm -rf wordpress"
        ],
        "post-install-cmd": [
            "@move-wordpress",
            "@theme-install"
        ],
        "post-update-cmd": [
            "@move-wordpress",
            "@theme-install"
        ]
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "composer/installers": true
        }
    }
}
